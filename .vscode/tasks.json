{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build entire project",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${workspaceFolder}\\MyProgram.exe",
                "${workspaceFolder}\\bandwidereceiver.cpp",
                "${workspaceFolder}\\receiver.cpp",
                "${workspaceFolder}\\prompts.cpp",
                "${workspaceFolder}\\validation.cpp",

            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
